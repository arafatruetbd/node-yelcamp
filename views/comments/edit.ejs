<%- include('../partials/header'); -%>
<div class="container">
  <div class="row">
    <div class="m-auto" style="width: 50%;">
      <div class="card">
        <h1 class="card-header text-center">
          Edit Comment
        </h1>
        <div class="card-body">
          <form
            action="/campgrounds/<%= campground_id %>/comments/<%=comment._id %>?_method=PUT"
            method="POST"
          >
            <div class="form-group">
              <label for="text">Comment</label>
              <input
                class="form-control"
                type="text"
                name="comment[text]"
                value="<%= comment.text%>"
              />
            </div>
            <div class="form-group">
              <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
          </form>
          <a href="/campgrounds/<%= campground_id %>">Go Back</a>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/footer'); -%>
